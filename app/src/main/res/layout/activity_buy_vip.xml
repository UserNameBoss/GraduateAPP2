<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:background="#ff3344"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageView_buyvip_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="40dp"
            android:src="@drawable/btn_back_0" />

        <TextView
            android:layout_gravity="center"
            android:text="购买会员"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="当前选择："
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="1个月会员"
            android:textSize="15sp"
            android:textColor="#ff3344"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="150dp"
            android:text="10.0元"
            android:textSize="15sp"
            android:textColor="#ff3344"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#FFF4F1F2"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_gravity="center"
            android:text="选择支付方式"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="剩余金币："
            android:paddingLeft="170dp"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="88"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout_goldpay"
        android:background="@drawable/my_relativelayout_select"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/vip_center_double_gold"
            android:layout_centerVertical="true"
            android:id="@+id/img_goldpay"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000金币支付"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/img_goldpay"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#454545"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/night_chk_pay_1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFDCD9D9" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout_zfbpay"
        android:background="@drawable/my_relativelayout_select"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/night_pay_center_alipay"
            android:layout_centerVertical="true"
            android:id="@+id/img_zfbpay"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝支付"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/img_zfbpay"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#454545"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/night_chk_pay_0"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFDCD9D9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout_bank_pay"
        android:background="@drawable/my_relativelayout_select"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/night_pay_center_card"
            android:layout_centerVertical="true"
            android:id="@+id/img_bank_pay"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡支付"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/img_bank_pay"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#454545"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/night_chk_pay_0"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFDCD9D9" />


    <LinearLayout
        android:orientation="vertical"
        android:background="#FFF5F0F1"
        android:layout_width="match_parent"
        android:layout_height="325dp">
        <Button
            android:id="@+id/ime_pay"
            android:text="立即支付"
            android:textSize="18dp"
            android:background="#ff3344"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>
      <TextView
          android:text="如充值遇到问题，请联系客服QQ：2875614385"
          android:textSize="10sp"
          android:textColor="#FFACAAAA"
          android:paddingLeft="10dp"
          android:background="#FFF5F0F1"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />

</LinearLayout>

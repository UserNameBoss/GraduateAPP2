<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--笑神来了-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff3344"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageView_add"
            android:onClick="add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:src="@drawable/icon_add"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="笑神来了"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView_refresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/hot_refresh_level" />
    </LinearLayout>

<!--整个标题外层-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<!--标题-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout_title"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_hot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="最热"
                    android:textColor="#ff3344"
                    />

                <TextView
                    android:id="@+id/textView_essence"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="精华"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/textView_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="图片"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/textView_section"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="段子"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/textView_sound"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="声音"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/textView_tyrant"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="霸友秀"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/textView_activityThem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="活动主题"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
   <!--线条-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout_line"
                >

                <ImageView
                    android:id="@+id/imageView_hot"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#ff0000"

                    />

                <ImageView
                    android:id="@+id/imageView_essence"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                     />

                <ImageView
                    android:id="@+id/imageView_image"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                     />

                <ImageView
                    android:id="@+id/imageView_section"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                     />

                <ImageView
                    android:id="@+id/imageView_sound"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                     />

                <ImageView
                    android:id="@+id/imageView_tyrant"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/imageView_activityThem"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

    </LinearLayout>
  <android.support.v4.view.ViewPager
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/viewPager">
  </android.support.v4.view.ViewPager>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff3344"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageView_collect_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="40dp"
            android:src="@drawable/btn_back_0" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textSize="25sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <com.example.yangxiaolong.graduateapp.MyView.MyEditext
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:id="@+id/MyEditext_feedback"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="top"
            android:hint="感谢向我们反馈使用感受，我们会认真阅读和回复每一条意见"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
        <com.example.yangxiaolong.graduateapp.MyView.MyEditext
            android:id="@+id/MyEditext_connect"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:hint="联系方式，如需回复请留下联系方式"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#ff3344"
            android:text="提交"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="审稿客服QQ：997378837"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:text="产品建议QQ：997378837"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:text="广告合作QQ：997378837"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:text="微博账号：笑霸来了_微博"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:text="微信订阅号：xiaobalaile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
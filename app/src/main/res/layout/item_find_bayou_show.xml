<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff3344"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageView_mes_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/btn_back_0" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="霸友秀"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/_share"
            android:text="分享"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView_show_beautiful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:text="共有"
            android:textColor="#454545"
            android:id="@+id/altogether"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:text="0"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/people_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/altogether"
            android:textColor="#ffff02"/>
        <TextView
            android:text="人参加"
            android:textColor="#454545"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/people_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="查看更多"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout_users"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_hot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最新"
            android:textColor="#ff3344"
            />

        <TextView
            android:id="@+id/textView_essence"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最热"
            android:textColor="#454545"/>
        </LinearLayout>.



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_line"
        >


        <ImageView
            android:id="@+id/imageView_newest"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#ff0000"

            />
        <ImageView
            android:id="@+id/imageView_hottest"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/darker_gray"
        />

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--消息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#ff3344"

        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton_back"
            android:background="#ff3344"
            android:src="@drawable/btn_back_0"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我要投稿"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提交"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:id="@+id/textView_post"/>
    </LinearLayout>




        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/editText_article"
            android:gravity="top"
            android:background="@null"
            android:hint="好东西要一起分享，把你的压箱底的笑料拿出来，供广大霸友们一起吐槽把！

须知：投稿由众霸友审核，通过后即可推荐到首页~
提醒霸友们严禁灌水、发广告及色情政治、敏感等内容，违者作永久封号处理~
            "

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="发布图片时标题文字控制在30字以内"
                android:layout_gravity="bottom"
                 />
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="#dcdada"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/btn_take_photo"
                    android:id="@+id/imageButton_take_photo" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="18dp"
                    android:textSize="15sp"
                    android:text="上传图片"
                    android:id="@+id/textView_uploadImage"/>
            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#dcdada"

        >


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#dcdada"
            android:id="@+id/imageButton_tab_pic"
            android:src="@drawable/btn_tab_pic_0"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#dcdada"
            android:id="@+id/imageButton_subject"
            android:src="@drawable/btn_subject_0"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#dcdada"
            android:id="@+id/imageButton_tab_audio"
            android:src="@drawable/btn_tab_audio_0"/>
    </LinearLayout>
</LinearLayout>

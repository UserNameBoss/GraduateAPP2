<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:background="#ff3344"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageView_messet_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="40dp"
            android:src="@drawable/btn_back_0" />

        <TextView
            android:layout_gravity="center"
            android:text="清除消息"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout_mesdelete_edit"
        android:background="@drawable/my_relativelayout_select">

        <TextView
            android:id="@+id/text_mesdelete_edit"
            android:text="审稿通知"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50sp" />

        <ImageView
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bg_chkbox_0"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </RelativeLayout>
    <TextView
        android:background="#FFD7D4D5"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout_mesdelete_common"
        android:background="@drawable/my_relativelayout_select">

        <TextView
            android:id="@+id/text_mesdelete_common"
            android:text="新评论通知"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50sp" />

        <ImageView
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bg_chkbox_0"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </RelativeLayout>
    <TextView
        android:background="#FFD7D4D5"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout_mesdelete_reply"
        android:background="@drawable/my_relativelayout_select">

        <TextView
            android:id="@+id/text_mesdelete_reply"
            android:text="评论回复通知"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50sp" />

        <ImageView
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bg_chkbox_0"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </RelativeLayout>
    <TextView
        android:background="#FFD7D4D5"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout_mesdelete_trends"
        android:background="@drawable/my_relativelayout_select">

        <TextView
            android:id="@+id/text_mesdelete_trends"
            android:text="好友动态通知"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50sp" />

        <ImageView
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bg_chkbox_0"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </RelativeLayout>
    <TextView
        android:background="#FFD7D4D5"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout_mesdelete_systemmes"
        android:background="@drawable/my_relativelayout_select">

        <TextView
            android:id="@+id/text_mesdelete_systemmes"
            android:text="系统消息通知"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50sp" />

        <ImageView
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bg_chkbox_0"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </RelativeLayout>
    <TextView
        android:background="#FFD7D4D5"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <Button
        android:id="@+id/button_imdelete"
        android:text="立即清除"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ff3344"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>

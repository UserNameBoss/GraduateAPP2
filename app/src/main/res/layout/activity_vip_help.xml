<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:background="#ff3344"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageView_viphelp_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="40dp"
            android:src="@drawable/btn_back_0" />

        <TextView
            android:layout_gravity="center"
            android:text="会员帮助"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        w<TextView
            android:text="会员帮助"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50sp" />
    </LinearLayout>

    <TextView
       android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FF7B7777"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <TextView
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:text="问:怎么成为会员？"
        android:textColor="#ff3344"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="16dp"
        android:paddingRight="20dp"
        android:paddingLeft="15dp"
        android:textColor="#FF7B7777"
        android:text="答:可以通过金币、支付宝、银行卡支付，即可成为会员，如果支付失败，可联系客服QQ2875614385。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="40dp"
        android:paddingLeft="15dp"
        android:text="问:成为会员有什么好处？"
        android:textColor="#ff3344"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
       <TextView
           android:paddingLeft="15dp"
           android:paddingRight="20dp"
           android:text="答：1.开通会员，你就能拥有属于自己的APP，连续30天启动最高可得223金币。
           2.可以拥有炫酷评论，颜色随你选。3.商城礼品全场打折。"
           android:textColor="#FF7B7777"
           android:textSize="16dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="40dp"
        android:paddingLeft="15dp"
        android:textSize="17dp"
        android:text="问:启动封面怎么设置？"
        android:textColor="#ff3344"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
     <TextView
         android:paddingLeft="15dp"
         android:paddingRight="20dp"
         android:textSize="16dp"
         android:textColor="#FF7B7777"
         android:text="答：点开专属封面—选一张最喜爱的照片，设置为启动封面，退出重新启动就可以看到自己的封面啦～"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />
<TextView
    android:id="@+id/text_vip_backhelphome"
    android:gravity="center"
  android:layout_marginTop="60dp"
    android:layout_gravity="center"
    android:text="返回帮助首页"
    android:textSize="18dp"
    android:textColor="#ff3344"
    android:background="@drawable/bg_attention_0"
    android:layout_width="150dp"
    android:layout_height="50dp" />


</LinearLayout>

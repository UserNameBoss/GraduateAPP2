<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_app"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_silver_0"
        android:src="@drawable/icon_logo36"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:text="应用名称"
        android:textColor="#454545"
        android:id="@+id/textView_appName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageView_app"
        />
    <TextView
        android:id="@+id/textView_detail"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="详情"
        android:layout_toRightOf="@+id/imageView_app"
        android:layout_below="@+id/textView_appName"
        />

        android:background="@drawable/appx_download"
    <com.example.yangxiaolong.graduateapp.MyView.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/textView_appName"
        android:layout_marginRight="10dp"
        android:id="@+id/circleImageView_img"
        android:src="@drawable/appx_download"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/light" />
</RelativeLayout>
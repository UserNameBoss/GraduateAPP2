<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff3344"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageView_goldaccelerate_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="40dp"
            android:src="@drawable/btn_back_0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="金币加速"
            android:textSize="25dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFEFE8E8"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/night_accelerate" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:text="特权规则"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="1、开通会员，笑神每日登陆金币、积分立即加速。"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="2、会员等级越高，金币、积分加速越快。"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="3、会员到期后，将不再享有金币、积分加速。"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="4、会员每日登陆加金币、积分规则。"
                    android:textSize="12sp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="6"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:rowCount="3">

                    <TextView
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="17dp"
                        android:text="VIP1"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="17dp"
                        android:text="VIP2"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="17dp"
                        android:text="VIP3"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_rowWeight="1"
                        android:paddingBottom="10dp"
                        android:paddingLeft="17dp"
                        android:text="VIP4"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="17dp"
                        android:text="VIP5"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="17dp"
                        android:text="VIP6"
                        android:textSize="13dp" />

                    <TextView
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:text="会员+1"
                        android:textSize="13dp" />

                    <TextView
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:text="会员+2"
                        android:textSize="13dp" />

                    <TextView
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:text="会员+3"
                        android:textSize="13dp" />

                    <TextView
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:text="会员+4"
                        android:textSize="13dp" />

                    <TextView
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:text="会员+5"
                        android:textSize="13dp" />

                    <TextView
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:text="会员+6"
                        android:textSize="13dp" />

                    <TextView
                        android:paddingLeft="15dp"
                        android:text="年费+3"
                        android:textSize="13dp" />

                    <TextView
                        android:paddingLeft="15dp"
                        android:text="年费+4"
                        android:textSize="13dp" />

                    <TextView
                        android:paddingLeft="15dp"
                        android:text="年费+5"
                        android:textSize="13dp" />

                    <TextView
                        android:paddingLeft="15dp"
                        android:text="年费+6"
                        android:textSize="13dp" />

                    <TextView
                        android:paddingLeft="15dp"
                        android:text="年费+7"
                        android:textSize="13dp" />

                    <TextView
                        android:paddingLeft="15dp"
                        android:text="年费+8"
                        android:textSize="13dp" />
                </GridLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="#FFEFE8E8" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/button_goldacelerate_dredgevip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="#ff3344"
        android:gravity="center"
        android:text="开通会员"
        android:textSize="17sp" />

</LinearLayout>

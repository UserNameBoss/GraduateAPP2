<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

        <item android:id="@android:id/background">

            <shape>

                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="#dadada"
                    android:endColor="#dadada"
                    android:startColor="#dadada" />
            </shape>
        </item>

        <item android:id="@android:id/secondaryProgress">

            <clip>

                <shape>

                    <corners android:radius="5dip" />

                    <gradient
                        android:angle="0"
                        android:centerColor="#ff0015"
                        android:centerY="0.75"
                        android:endColor="#ff0015"
                        android:startColor="#ff0015" />
                </shape>
            </clip>
        </item>

        <item android:id="@android:id/progress">

            <clip>

                <shape>

                    <corners android:radius="5dip" />

                    <gradient
                        android:angle="0"
                        android:endColor="#ff0008"
                        android:startColor="#ff0004" />
                </shape>
            </clip>
        </item>

    </layer-list>
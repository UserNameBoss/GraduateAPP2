<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>

    <shape android:shape="rectangle">
        <!-- 圆角 -->
        <corners android:radius="10dp" />

        <solid android:color="#FFD2D0D0" />

        <padding android:bottom="3dp"
            android:left="3dp"
            android:right="3dp"
            android:top="3dp" />
    </shape>
    </item>

    <!-- 主体背景颜色值 -->
    <item >
        <shape android:shape="rectangle"
            android:bottom="3dp" android:right="3dp" android:left="3dp" android:top="3dp">

            <!-- 圆角 -->
            <corners android:radius="10dp" />
            <solid android:color="#ffffff" />

            <padding android:bottom="10dp"
                android:left="30dp"
                android:right="30dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>